@model Recyclable.Models.RecyclableType

@{
    ViewData["Title"] = "Add Recyclable Type";
}

<h2>Add Recyclable Type</h2>

@using (Html.BeginForm("Add", "RecyclableType", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.HiddenFor(model => model.Id)  
                @Html.LabelFor(model => model.Type)
                    @Html.TextBoxFor(model => model.Type, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Rate)
                    @Html.TextBoxFor(model => model.Rate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MinKg)
                    @Html.TextBoxFor(model => model.MinKg, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MinKg, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MaxKg)
                    @Html.TextBoxFor(model => model.MaxKg, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaxKg, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mt-3 text-center">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <input type="reset" value="Reset" class="btn btn-secondary" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
